;
; BIND data file for local loopback interface
;
$TTL	604800
@	IN	SOA	markzu.enigma.who. root.enigma.who. (
			      2		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
; Nameservers
@	IN	NS	markzu.enigma.who.
@	IN	MX	10	smtpServer.enigma.who.

; Domain Servers
markzu		IN	A	192.168.0.37
smtpServer	IN	A	192.168.0.35
apacheServer	IN	A	192.168.0.34
ftpServer	IN	A	192.168.0.36
databaseServer	IN	A	3.251.28.226
monitorServer	IN	A	192.168.0.98

; Domain Devices

; CPD
cameraS0	IN	A	192.168.0.130
; HECATOMB
